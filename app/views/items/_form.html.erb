<%= simple_form_for(@item, html: {class: 'form-horizontal' }) do |f| %> 

<%= f.error_notification %> 
<%= f.input :name %>
<%= f.input :barcode %>

<div class="form-actions">
  <%= f.submit  :class => 'col-xs-offset-3 btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), items_path, :class => 'btn' %>
</div>

<% end %>
